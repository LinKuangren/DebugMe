<header>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn"><i for="check" class="fa-solid fa-bars checkbtn"></i></label>
    <div class="logo_site">
        <a href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="logo_site">
        </a>
    </div>
    {% if app.user is not null %}
        <div class="navigation">
            <div>
                <nav>
                    <a href="{{ path('add_tickets') }}">Cr√©er un ticket</a>
                </nav>
            </div>
            <div class="user-connexion">
                <input type="checkbox" id="check_1">
                <label for="check_1" class="label_email"><p id="profile">{{ app.user.email }}</p></label>
                <div class="profile-menu">
                    <ul>
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li>
                                <a href="{{ path('app_admin') }}">Dashboard</a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('app_logout') }}">Deconnexion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        <div class="user-connexion">
            <a href="{{ path('app_login') }}">Connexion</a>
                <span class="separator">/</span>
            <a href="{{ path('app_register') }}">Inscription</a>
        </div>
    {% endif %}
</header>